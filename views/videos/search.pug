extends ../layouts/main.pug
block content
    .home_video
        h1.search_name Searching for #{search}
        if videos.length === 0
            h5.search_no_video No Video Found
        else
            each video in videos
                .video_block
                    video.videoBlock_thumbnail(src=video.fileUrl,controls = true,width ="650px")
                    a.video_info(href="/videos/"+video.id)
                        h4.video_title=video.title
                        h4.video_views #{video.views} views