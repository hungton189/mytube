mixin videoPlayer(video = {})
    .video_player
        video.videoBlock_thumbnail(src=`/${video.src}`,controls = true,width ="650px")
        .video_player_controls
            .video_player_controls_column
                span
                    i.fas.fa-volume-up
                span
                    |00:00/10:00
            .video_player_controls_column
                span
                    i.fas.fa-play
            .video_player_controls_column
                span
                    i.fas.fa-expand