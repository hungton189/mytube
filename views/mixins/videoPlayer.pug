mixin videoPlayer(video = {})
    .video_player#jsVideoPlayer
        video.videoBlock_thumbnail(src=`/${video.src}`)
        .video_player_controls
            .video_player_controls_column
                span#jsVolumeButton
                    i.fas.fa-volume-up
                span
                    span#currentTime 00:00:00
                    |/
                    span#totalTime 00:00:00
            .video_player_controls_column
                span#jsPlayButton
                    i.fas.fa-play
            .video_player_controls_column
                span#jsFullScreen
                    i.fas.fa-expand